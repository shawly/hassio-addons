{
  "name": "API Scapegoat",
  "version": "1.0.0",
  "slug": "api-scapegoat",
  "description": "API gateway with failover for REST sensors.",
  "url": "https://github.com/shawly/hassio-api-scapegoat",
  "startup": "services",
  "ingress": true,
  "ingress_port": 1337,
  "ports": {
    "80/tcp": null
  },
  "ports_description": {
    "80/tcp": "Not required for Ingress"
  },
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "init": false,
  "map": [
    "config:rw",
    "ssl:ro"
  ],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "options": {
    "log_level": "info",
    "ssl": true,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "apis": []
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)",
    "certfile": "str",
    "keyfile": "str",
    "ssl": "bool",
    "apis": [
      {
        "host": "str",
        "port": "int(1,65535)",
        "failover": {
          "response": {
            "content-type": "str",
            "body": "str",
            "status-code": "int(100,599)"
          }
        }
      }
    ]
  },
  "image": "shawly/hassio-api-scapegoat-{arch}"
}